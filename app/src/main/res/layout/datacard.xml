<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/datacardiv"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginStart="27dp"
        app:layout_constraintBottom_toBottomOf="@+id/datacardage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datacardage"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/datacardname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="25dp"
        android:text="Name"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/datacardiv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/datacardemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="15dp"
        android:text="Email"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/datacardiv"
        app:layout_constraintStart_toEndOf="@+id/datacardiv" />

    <TextView
        android:id="@+id/datacardage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="12dp"
        android:text="age"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/datacardname"
        app:layout_constraintTop_toBottomOf="@+id/datacardname" />
</androidx.constraintlayout.widget.ConstraintLayout>